rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Leaderboard is public read
    match /teams/{teamId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Optionally protect other collections fully
    match /{document=**} {
      allow read, write: if false;
    }
  }
}